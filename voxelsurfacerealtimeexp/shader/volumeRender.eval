#version 430

layout(quads, equal_spacing, ccw) in;


// input
in gl_PerVertex
{
	vec4 gl_Position;
} gl_in[];

struct InVertex
{
	vec4 VolumeData;
};
layout(location = 0) in InVertex In[];


// output
out gl_PerVertex
{
	vec4 gl_Position;
};
struct OutVertex
{
	vec3 Normal;
};
layout(location = 0) out OutVertex Out;

vec4 interpolateQuad(in vec4 v0, in vec4 v1, in vec4 v2, in vec4 v3)
{
	vec4 a = mix(v0, v1, gl_TessCoord.x);
	vec4 b = mix(v3, v2, gl_TessCoord.x);
	return mix(a, b, gl_TessCoord.y);
}

vec3 interpolateQuad(in vec3 v0, in vec3 v1, in vec3 v2, in vec3 v3)
{
	vec3 a = mix(v0, v1, gl_TessCoord.x);
	vec3 b = mix(v3, v2, gl_TessCoord.x);
	return mix(a, b, gl_TessCoord.y);
}

void main()
{	
	gl_Position = interpolateQuad(gl_in[0].gl_Position, gl_in[1].gl_Position, gl_in[2].gl_Position, gl_in[3].gl_Position);

	vec4 volumedata = interpolateQuad(In[0].VolumeData, In[1].VolumeData, In[2].VolumeData, In[3].VolumeData);
	Out.Normal = volumedata.xyz * 2.0f - vec3(1.0f);
}